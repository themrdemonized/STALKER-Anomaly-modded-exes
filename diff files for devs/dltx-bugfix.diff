+BOOL CFPCamEffector::ProcessCam(SCamEffectorInfo& info)
+{
+	// Set target camera
+	Fmatrix temp;
+	temp.identity().setHPB(m_HPB.x, m_HPB.y, m_HPB.z).translate_over(m_Position);
